{% import '_includes/forms' as forms %}

<div id="mail" class="hidden">
    {{ forms.textField({
        label: 'Mail subject'|t('content-subscriptions'),
        name: 'emailSubject',
        required: true,
        value: (group) ? group.emailSubject : ''
    }) }}

    {{ forms.textAreaField({
        label: 'Mail Message'|t('content-subscriptions'),
        name: 'emailMessage',
        required: true,
        value: (group) ? group.emailBody : '',
        rows: 8
    }) }}
</div>