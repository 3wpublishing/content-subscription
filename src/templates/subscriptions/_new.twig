{% extends '_layouts/cp' %}

{% import '_includes/forms' as forms %}

{% set title = 'New Subscription' %}

{% set fullPageForm = true %}

{% set sections = craft.mailSubscriptions.getSections %}

{% block content %}
    {{ forms.hidden({
        name: 'action',
        value: 'mail-subscriptions/groups/save-mail-group'
    }) }}

    {#{% include '_includes/groupFormFields' with { group: group } %}#}
    {{ forms.selectField({
        label: 'Section'|t('mail-subscriptions'),
        name: 'section',
        value: '',
        options: sections
    }) }}

    {{ forms.textField({
        label: 'Group name'|t('mail-subscriptions'),
        name: 'groupName',
        value: ''
    }) }}

    {{ forms.textField({
        label: 'Mail subject'|t('mail-subscriptions'),
        name: 'emailSubject',
        value: ''
    }) }}

    {{ forms.textAreaField({
        label: 'Mail Message'|t('mail-subscriptions'),
        name: 'emailMessage',
        value: '',
        rows: 8
    }) }}
{% endblock %}