{% import '_includes/forms' as forms %}

    {{ forms.selectField({
        label: 'Section'|t('mail-subscriptions'),
        name: 'section',
        value: (group) ? group.sectionId : '',
        options: sections,
        first: true,
    }) }}

    {{ forms.textField({
        label: 'Group name'|t('mail-subscriptions'),
        name: 'groupName',
        value: (group) ? group.groupName : ''
    }) }}

    {{ forms.textField({
        label: 'Mail subject'|t('mail-subscriptions'),
        name: 'emailSubject',
        value: (group) ? group.emailSubject : ''
    }) }}

    {{ forms.textAreaField({
        label: 'Mail Message'|t('mail-subscriptions'),
        name: 'emailMessage',
        value: (group) ? group.emailBody : '',
        rows: 8
    }) }}